{
  "search.exclude": {
    "**/.sst": true,
    "**/dist": true,
    "**/sst-env.d.ts": true
  },
  "editor.rulers": [100],
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "html.autoClosingTags": true,
  "eslint.validate": ["javascript", "typescript"],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsdk": "node_modules/typescript/lib",

  // .vscode/settings.json file

  "cssvar.files": [
    "./apps/client/node_modules/open-props/open-props.min.css",
    // if you have an alternative path to where your styles are located
    // you can add it in this array of files
    "./apps/client/src/styles/variables.css"
  ],

  // Do not ignore node_modules css files, which is ignored by default
  "cssvar.ignore": [],

  // add support for autocomplete in JS or JS like files
  "cssvar.extensions": ["css", "postcss", "jsx", "tsx", "vue"]
}
