{
  "name": "@opcgdb/data",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/data",
  "projectType": "library",
  "targets": {
    "scrape": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/data",
        "commands": ["vite-node ./utils/scraper.ts"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["scrape"],
      "options": {
        "cwd": "apps/data",
        "commands": ["rm -rf dist", "tsc"]
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/data",
        "commands": ["rm -rf dist", "tsc -w"]
      }
    }
  }
}
