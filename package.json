    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "nx": "^18.0.7",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.12",
    "typescript": "^5.3.3"
  }
