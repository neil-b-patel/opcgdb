{
  "name": "opcgdb",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo hosting series of packages for the One Piece TCG DB",
  "license": "ISC",
  "author": "Marcos Mellado <marcos@mellado.dev>",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "api:build": "nx run @opcgdb/api:build --output-style=stream",
    "api:watch": "nx run @opcgdb/api:watch --output-style=stream",
    "build": "nx run-many --target=build --output-style=stream --parallel=1 --maxParallel=1",
    "cdn:build": "nx run @opcgdb/cdn:build --skip-nx-cache --output-style=stream",
    "client:build": "nx run @opcgdb/client:build --output-style=stream",
    "client:dev": "nx run @opcgdb/client:dev --output-style=stream",
    "data:build": "nx run @opcgdb/data:build --skip-nx-cache --output-style=stream",
    "data:watch": "nx run @opcgdb/data:watch --skip-nx-cache --output-style=stream",
    "format": "prettier apps/**/*.{ts,js,json} --write",
    "lint": "eslint apps/**/*.{ts,js,json}",
    "lint:fix": "eslint apps/**/*.{ts,js,json} --fix",
    "prepare": "husky",
    "sst:build": "sst build",
    "sst:console": "sst console",
    "sst:deploy": "sst deploy --stage=production",
    "sst:dev": "sst dev --stage=local",
    "sst:remove": "sst remove",
    "types:build": "nx run @opcgdb/types:build --output-style=stream",
    "types:watch": "nx run @opcgdb/types:watch --output-style=stream",
    "watch": "nx run-many --parallel -t watch -t dev --projects=apps/* --maxParallel=100 --output-style=stream"
  },
  "lint-staged": {
    "apps/**/*.{js,ts}": "eslint --cache --fix",
    "**/*.{js,ts,json}": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "aws-cdk-lib": "2.132.1",
    "constructs": "10.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nx": "^18.0.7",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.12",
    "rimraf": "^5.0.5",
    "sst": "^2.41.2",
    "typescript": "^5.3.3"
  }
}
